
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own account document.
    match /accounts/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can create new transactions for themselves.
    // Users can only read transactions where their userId matches the accountId.
    match /transactions/{transactionId} {
      allow create: if request.auth != null && request.resource.data.accountId == request.auth.uid;
      allow read: if request.auth != null && resource.data.accountId == request.auth.uid;
    }
    
    // Allow users to query the transactions collection if they are filtering by their own accountId.
    match /transactions/{document=**} {
        allow list: if request.auth != null && request.query.getRules().get("accountId") == request.auth.uid;
    }

    // Users can only read/update notifications intended for them.
    match /notifications/{notificationId} {
      allow read, update, create: if request.auth.uid == resource.data.userId || request.auth.uid == request.resource.data.userId;
    }
  }
}
