service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own account data
    match /accounts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can read their own transactions from the collection,
    // and can create transactions for their own account.
    match /transactions/{transactionId} {
      allow read: if request.auth != null && resource.data.accountId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.accountId == request.auth.uid;
    }
    
    // Allow querying the transactions collection if the query is scoped to the user's accountId
    match /transactions/{document=**} {
        allow list: if request.auth != null && request.query.get("where")[0][2] == request.auth.uid;
    }
  }
}
