rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read, create, and update their own account document.
    match /accounts/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows a user to query the 'transactions' collection
    // ONLY IF the query includes a 'where("accountId", "==", request.auth.uid)' clause.
    // It also allows creating new transactions.
    match /transactions/{transactionId} {
      allow list, read: if request.auth != null && request.query.get("accountId") == request.auth.uid;
      allow create: if request.auth != null;
    }
    
    // This rule allows a user to query the 'notifications' collection
    // ONLY IF the query includes a 'where("userId", "==", request.auth.uid)' clause.
    // It also allows creating and updating notifications.
    match /notifications/{notificationId} {
      allow list, read, update: if request.auth != null && request.query.get("userId") == request.auth.uid || (resource.data.userId == request.auth.uid);
      allow create: if request.auth != null;
    }
  }
}
