
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isSignedIn() {
      return request.auth != null;
    }

    match /accounts/{userId} {
      // Allow a user to read, create, and update their own account document.
      allow read, create, update: if isSignedIn() && request.auth.uid == userId;
      
      // Allow any authenticated user to query the accounts collection.
      // This is required to find a recipient's account by email for transfers.
      // The query itself is secure as it only retrieves limited data.
      allow list: if isSignedIn();
    }

    match /transactions/{transactionId} {
      // Allow a user to create a transaction for themselves (e.g., a withdrawal) 
      // or for another user (e.g., a deposit during a transfer).
      allow create: if isSignedIn();
      
      // Allow a user to query for their own transactions.
      // The query in the app is `where("accountId", "==", userId)`.
      allow list: if isSignedIn() && request.query.where.accountId == request.auth.uid;
    }
    
    match /notifications/{notificationId} {
      // Allow a user to create a notification for themselves or another user.
      allow create: if isSignedIn();
      
      // Allow a user to update their own notifications (e.g., to mark as read).
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;

      // Allow a user to query for their own notifications.
      // The query in the app is `where("userId", "==", userId)`.
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
  }
}
