
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own account data.
    match /accounts/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can only create transactions for themselves.
    // Users can only read transactions linked to their account.
    match /transactions/{transactionId} {
       allow create: if request.auth.uid == request.resource.data.accountId;
       allow read: if request.auth.uid == resource.data.accountId;
    }
    
    // Users can only create notifications for themselves or others (in a transaction)
    // Users can only read/update their own notifications
    match /notifications/{notificationId} {
        allow create: if request.auth.uid != null;
        allow read, update: if request.auth.uid == resource.data.userId;
    }
  }
}
