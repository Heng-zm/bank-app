
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and manage their own account document.
    match /accounts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can create and read their own transactions.
    match /transactions/{transactionId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/transactions/$(transactionId)).data.accountId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.accountId == request.auth.uid;
    }
  }
}
